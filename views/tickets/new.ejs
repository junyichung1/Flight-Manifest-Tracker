<%- include('../partials/header') %>


<form action="/flights/<%= flight %>/tickets" method="POST">
    
<div class="boxticket">
    <h2>Select your Preferred Seat</h2>
<label>Select Seat (Format [A-F][1-99]):</label>
    <input name="seat" required pattern="[A-F][1-9]\d?">
    <br>
    <label>Pricing (Ranges from 0-$999):
        <input type="number" name="price" min= 0>
      </label><br>
      <input type="submit" value="Purchase Ticket">
    </form>
</div>

